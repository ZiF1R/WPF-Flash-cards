<UserControl x:Class="course_project1.controls.SettingDescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:course_project1.controls"
             mc:Ignorable="d"
             Name="SettingDescr"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock
            Margin="0,15,0,0"
            HorizontalAlignment="Left">
            <TextBlock
                FontFamily="Segoe UI"
                FontSize="17"
                Foreground="{DynamicResource TextColor}"
                Text="{Binding Header, ElementName=SettingDescr}"/>
            
            <LineBreak />
            
            <TextBlock
                FontSize="14"
                MaxWidth="400"
                TextWrapping="Wrap"
                FontFamily="Segoe UI Light"
                Foreground="{DynamicResource TextColorOpacity}"
                Text="{Binding Description, ElementName=SettingDescr}"/>
        </TextBlock>
    </Grid>
</UserControl>
